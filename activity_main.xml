<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_gravity="bottom"
    android:background="#F0F0F0"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:gravity="end"
        android:layout_marginBottom="35sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_MC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MC"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/button_MR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MR"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/button_MP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M+"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/button_MM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M-"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/button_MS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MS"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_modulus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="%"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_CE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_C"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="C"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_Erase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="e"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_reciprocal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1/x"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_square"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="x^2"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_root"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="√"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_divide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="÷"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />
        <Button
            android:id="@+id/button_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_Multiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="x"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button_sign_change"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="."
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="="
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:minHeight="80dp"
            />

    </LinearLayout>




</LinearLayout>